    <script>
        // NOTE: Default values are templated. If your replacement system injects numbers as strings,
        // adjust parsing below accordingly.
        let currentServings = Number("{{SERVINGS}}") || 3;
        const baseServings = Number("{{SERVINGS}}") || 3;

        function adjustServings(change) {
            const newServings = currentServings + change;
            if (newServings < 1 || newServings > 12) return;
            
            currentServings = newServings;
            document.getElementById('servingsDisplay').textContent = currentServings;
            
            updateIngredients();
            
            // Animate the change
            const display = document.getElementById('servingsDisplay');
            display.style.transform = 'scale(1.2)';
            setTimeout(() => display.style.transform = 'scale(1)', 200);
        }

        function updateIngredients() {
            const ratio = currentServings / baseServings;
            const items = document.querySelectorAll('.ingredient-item');
            
            items.forEach(item => {
                const base = parseFloat(item.dataset.base);
                const unit = item.dataset.unit;
                const qtySpan = item.querySelector('.ingredient-qty');
                
                if (base === 0) return; // For "to taste" items
                
                let newQty = base * ratio;
                
                // Format the quantity nicely
                let formattedQty;
                if (newQty < 1 && newQty !== 0) {
                    const fraction = Math.round(newQty * 4) / 4;
                    if (fraction === 0.25) formattedQty = '¬º';
                    else if (fraction === 0.5) formattedQty = '¬Ω';
                    else if (fraction === 0.75) formattedQty = '¬æ';
                    else formattedQty = fraction.toString();
                } else {
                    formattedQty = Number.isInteger(newQty) ? newQty : newQty.toFixed(1).replace('.0', '');
                }
                
                qtySpan.textContent = `${formattedQty} ${unit}`;
            });
        }

        function toggleStep(element) {
            element.classList.toggle('completed');
            
            // Add a subtle completion sound or vibration if supported
            if (navigator.vibrate && element.classList.contains('completed')) {
                navigator.vibrate(50);
            }
        }

        // Add keyboard navigation
        document.addEventListener('keydown', (e) => {
            if (e.key === 'p' && e.ctrlKey) {
                e.preventDefault();
                window.print();
            }
        });
    </script>
